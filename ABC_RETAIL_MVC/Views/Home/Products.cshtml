@model IEnumerable<ABC_RETAIL_MVC.Models.Products>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold" style="color: #333;">Available Products</h2>
    <a href="/Orders" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #ff7e5f, #feb47b); border: none; border-radius: 30px; box-shadow: 0 4px 15px rgba(255, 126, 95, 0.3);">
        🛒 View Orders
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr style="background-color: #ff7e5f; color: white;">
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.OrderByDescending(p => p.Timestamp))
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>$@product.ProductPrice.ToString("F2")</td>
                    <td>@product.Stock</td>
                    <td>@(product.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No products found.
    </div>
}