@model IEnumerable<ABC_RETAIL_MVC.Models.Customers>
@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold" style="color: #333;">Customer List</h2>
    <a href="/Products" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #ff7e5f, #feb47b); border: none; border-radius: 30px; box-shadow: 0 4px 15px rgba(255, 126, 95, 0.3);">
        🛍 View Products
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr style="background-color: #ff7e5f; color: white;">
                <th scope="col">Customer ID</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.OrderByDescending(c => c.Timestamp))
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerPhone</td>
                    <td>@customer.CustomerAddress</td>
                    <td>@(customer.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No customers found.
    </div>
}