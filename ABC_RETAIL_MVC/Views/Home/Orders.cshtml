@model IEnumerable<ABC_RETAIL_MVC.Models.Orders>
@{
	ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h2 class="fw-bold" style="color: #333;">Your Orders</h2>
	<a href="/Products" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #ff7e5f, #feb47b); border: none; border-radius: 30px; box-shadow: 0 4px 15px rgba(255, 126, 95, 0.3);">
		🛍 Continue Shopping
	</a>
	<div>
		<a asp-controller="Home" asp-action="Orders" class="btn btn-primary">
			<i class="bi bi-arrow-clockwise"></i> Refresh Data
		</a>
	</div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
<div class="alert alert-danger" role="alert">
		@ViewBag.ErrorMessage
	</div>
}
else if (Model != null && Model.Any())
{
	<table class="table table-striped table-hover mt-4">
		<thead class="thead-dark">
			<tr style="background-color: #ff7e5f; color: white;">
				<th scope="col">Order ID</th>
				<th scope="col">Customer Name</th>
				<th scope="col">Product Name</th>
				<th scope="col">Quantity</th>
				<th scope="col">Price</th>
				<th scope="col">Order Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var order in Model.OrderByDescending(p => p.Timestamp))
			{
				<tr>
					<td>@order.OrderId</td>
					<td>@order.CustomerId</td>
					<td>@order.ProductId</td>
					<td>@order.Quantity</td>
					<td>$@string.Format("{0:F2}", order.TotalAmount)</td>
					<td>
						@order.OrderDate.ToString("yyyy-MM-dd")
					</td>
				</tr>
			}
	))
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info" role="alert">
		No orders found. Start shopping to place your first order!
	</div>
}

